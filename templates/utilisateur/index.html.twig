{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1>Utilisateur</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <ol class="breadcrumb text-right">

                                    <li><a href="#">Utilisateur</a></li>
                                    <li class="active">Data table</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

                            <div class="card">
                            <div class="card-header">
                                <a href={{path('add_User')}}><button type="button" class="btn btn-primary" style="float: right;">+ Ajouter</button></a>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Username</th>
                                            <th>Password</th>
                                            <th>Role</th>
                                            

                                        </tr>
                                    </thead>
                                    <tbody>
                                   
                                        
                                    {% for User in Users %}
                                      <tr>
                                            <td>{{User.id}}</td>
                                            <td>{{User.nom}}</td>
                                            <td>{{User.username}}</td>
                                            <td>{{User.password}}</td>
                                            <td>{{User.role}}</td>
                                            <td>
                                            <a href={{path('delete_utilisateur',{'id':User.id})}}><button class="btn btn-danger" onclick="myFunction()">Supprimer</button></a>
                                              
                                            </td>
                                    
                                        </tr>
                                    {% endfor %} 
                                        
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div> 
        </div> 


{% endblock %}
