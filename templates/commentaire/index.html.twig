{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
        {% block mainContent %}
        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1>Commentaire</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <ol class="breadcrumb text-right">

                                    <li><a href="#">Commentaire</a></li>
                                    <li class="active">Data table</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                           
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Id Commentaire</th>
                                            <th>Utilisateur</th>
                                            <th>Nom Film</th>                                            
                                            <th>Commentaire</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                   
                                        
                                    {% for Commentaire in Commentaires %}
                                
                                        <tr>
                                            <td>{{Commentaire.id}}</td>                                            
                                            <td>{{Commentaire.Utilisateur}}</td>
                                            <td>{{Commentaire.Film}}</td>
                                            <td>{{Commentaire.Commentaire}}</td>
                                            <td>
                                            {% for row in Commentaires %}
                                                <a href={{path('delete_commentaire',{'id':Commentaire.id})}}><button class="btn btn-danger" onclick="myFunction()">Supprimer</button></a>
                                            {% endfor %}  
                                            </td>
                                        </tr>
                                    {% endfor %}
                                        
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        
{% endblock %}  
{% endblock %}
